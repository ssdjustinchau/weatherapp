<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultimediaActivity">


    <WebView android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView android:id="@+id/video2"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:layout_constraintTop_toBottomOf="@+id/video1"/>

    <WebView android:id="@+id/video3"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:layout_constraintTop_toBottomOf="@+id/video2"/>

</androidx.constraintlayout.widget.ConstraintLayout>